<Window x:Class="Repaso1ERParcial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Repaso1ERParcial"
        mc:Ignorable="d"
        Title="Ventana De Menu" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Menu Height="18">
                <MenuItem Header="Registros">
                    <MenuItem x:Name="RegistroColoresMenuItem" Header="Registro Colores" Click="RegistroColoresMenuItem_Click" />
                </MenuItem>

                <MenuItem Header="Consultas">
                    <MenuItem x:Name="ConsultaColoresMenuItem" Header="Consulta Colores" Click="ConsultaColoresMenuItem_Click"/>
                </MenuItem>

            </Menu>
           
        </StackPanel>
    </Grid>
</Window>
